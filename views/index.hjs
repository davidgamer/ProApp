<!DOCTYPE html>
<html>
   
   <head>
      <title>Cadastro De Candidato</title>
      <noscript>
      <link rel="stylesheet" href="/public/stylesheets/style.less"></link>
        </noscript>
        </head>
   
   <body>
      <h1>Cadastro de Candidatos</h1>
      <form action="" method="post">
         <!-- DADOS PESSOAIS-->
         <fieldset>
            <legend>Dados Pessoais</legend>
            <table cellspacing="10">
               <tr>
                  <td>
                     <label for="nome">Nome:</label>
                  </td>
                  <td align="left">
                     <input type="text" name="email">
                  </td>
                  <tr>
                     <td>
                        <label for="nomdamae">Nome Da Mãe</label>
                     </td>
                     <td align="left">
                        <input type="text" name="nomdamae">
                     </td>
                  </tr>
               </tr>
               <tr>
                  <td>
                     <label>Nascimento:</label>
                  </td>
                  <td align="left">
                     <input type="text" name="dia" size="2" maxlength="2" value="dd">
                     <input type="text" name="mes" size="2" maxlength="2" value="mm">
                     <input type="text" name="ano" size="4" maxlength="4" value="aaaa">
                  </td>
               </tr>
               <tr>
                  <td>
                     <label>CPF:</label>
                  </td>
                  <td align="left">
                     <input type="text" name="cpf" size="9" maxlength="9">-
                     <input type="text" name="cpf2" size="2" maxlength="2">
                  </td>
               </tr>
               <tr>
                  <td>
                     <label>Cor:</label>
                  </td>
                  <td>
                     <select>
                        <option>Branca</option>
                        <option>Parda</option>
                        <option>Negra</option>
                     </select>
                  </td>
               </tr>
               <tr>
                  <td>
                     <label>NIS</label>
                  </td>
                  <td>
                     <input type="text" name="nis" size="10" maxlength="10"></input>
                     <input type="text" name="nis2" size="1" maxlength="1"></input>
                  </td>
               </tr>
               <tr>
                  <td>
                     <label>Profissão</label>
                  </td>
                  <td>
                     <input type="text" name="profissao"></input>
                  </td>
               </tr>
            </table>
         </fieldset>
         <br />
         <!-- ENDEREÇO -->
         <fieldset>
            <legend>Endereço</legend>
            <table cellspacing="10">
               <tr>
                  <td>
                     <label for="rua">Rua:</label>
                  </td>
                  <td align="left">
                     <input type="text" name="rua">
                  </td>
                  <td>
                     <label for="numero">Numero:</label>
                  </td>
                  <td align="left">
                     <input type="text" name="numero" size="4">
                  </td>
               </tr>
               <tr>
                  <td>
                     <label for="bairro">Bairro:</label>
                  </td>
                  <td align="left">
                     <input type="text" name="bairro">
                  </td>
               </tr>
               <tr>
            </table>
         </fieldset>
         <br />
         <input type="submit" value="Salvar">
         <input type="reset" value="Limpar">
      </form>
   </body>

</html>